#include <iostream>

using namespace std;

unsigned short SetFlag(short int number, short int position){
    return number | ( 1 << position);
}
unsigned short ClearFlag(short int number, short int position){
    return number & ~ (1 << position);
}


int main()
{
    short int number;
    short int position;
    
    cout<<"Introduceti numarul:" << endl;
    cin >> number;


    cout<<"Introduceti pozitia:" << endl;
    cin >> position;
    
    cout << "Numarul cu flag este:" << SetFlag(number,position) << endl;
    cout << "Numarul fara flag este:" << ClearFlag(number,position)<< endl;
    return 0;
}
